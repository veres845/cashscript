{
  "name": "cashc",
  "version": "0.5.0",
  "description": "Compile Bitcoin Cash contracts to Bitcoin Cash Script or artifacts",
  "keywords": [
    "bitcoin",
    "bitcoin cash",
    "cashscript",
    "compiler",
    "smart contracts"
  ],
  "homepage": "https://cashscript.org",
  "bugs": {
    "url": "https://github.com/Bitcoin-com/cashscript/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bitcoin-com/cashscript.git"
  },
  "license": "MIT",
  "author": "Rosco Kalis <roscokalis@gmail.com>",
  "contributors": [
    "Gabriel Cardona <gabriel@bitcoin.com>"
  ],
  "main": "dist/index",
  "types": "dist/index",
  "bin": {
    "cashc": "dist/cashc-cli.js"
  },
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "scripts": {
    "antlr": "antlr4ts -visitor -listener src/grammar/CashScript.g4",
    "build": "npm run clean && npm run compile",
    "clean": "rm -rf ./dist",
    "compile": "tsc -p tsconfig.build.json",
    "lint": "eslint . --ext .ts --ignore-path ../../.eslintignore",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "test": "jest --config=../../jest.config.js packages/cashc"
  },
  "dependencies": {
    "@bitauth/libauth": "^1.17.1",
    "@types/semver": "^6.0.2",
    "antlr4ts": "^0.5.0-alpha.3",
    "commander": "^6.0.0",
    "semver": "^6.3.0"
  },
  "devDependencies": {
    "delay": "^4.3.0",
    "eslint": "^6.6.0",
    "jest": "^24.9.0",
    "ts-jest": "^24.3.0",
    "typescript": "3.7.5"
  }
}
